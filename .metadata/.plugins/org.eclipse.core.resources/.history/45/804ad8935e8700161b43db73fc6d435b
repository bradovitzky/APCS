package fracCalc2;
import java.util.*;
public class FractionalCalculator
{

	public static void main(String[] args)
	{
		Scanner console = new Scanner(System.in);
		System.out.println("Welcome to the Fraction Calculator!");
		System.out.println("Enter an expression (or \"quit\"): ");
		String input = console.nextLine();
		while(!input.equals("quit"))
		{
			String frac1 = input.substring(0, input.indexOf(" "));
			System.out.println(frac1);
			char operator = input.charAt(input.indexOf(" ") + 1);
			System.out.println(operator);
			String frac2 = input.substring(input.indexOf(" ", input.indexOf(" ") + 1)); //Finds second " " and starts frac2 after it
			System.out.println(frac1);
			
			convertToFraction(frac1);//THIS MAKES LIFE SO MUCH EASIER
			convertToFraction(frac2);//THIS MAKES LIFE SO MUCH EASIER
			
			System.out.println();
			System.out.println("Enter an expression (or \"quit\"): ");
			input = console.nextLine();
		}
		System.out.println("Goodbye!");
	}
	public static int getWhole(String input)
	{
		int underscoreIndex = input.indexOf("_");
		
		if(underscoreIndex == -1)
		{
			return 0;
		}
		else
		{
			return Integer.parseInt(input.substring(0, underscoreIndex));
		}
	}
	
	public static int getNumerator(String input)
	{
		int underscoreIndex = input.indexOf("_");
		int slashIndex = input.indexOf("/");
		if(underscoreIndex != -1)
		{
			return Integer.parseInt(input.substring(0, slashIndex));
		}
		else
		{
			return Integer.parseInt(input.substring(underscoreIndex, slashIndex));
		}
	}
	
	public static int getDenominator(String input)
	{
		int underscoreIndex = input.indexOf("_");
		int slashIndex = input.indexOf("/");
		
		return Integer.parseInt(input.substring(slashIndex));
	}
	public static String findOperator(String input)
	{
		
		return null;
	}
	public static String convertToFraction(String input)
	{
		int w = getWhole(input);
		int n = getNumerator(input);
		int d = getDenominator(input);
		int ansNum = w * d + n;
		int ansDen = d;
		return ansNum + "/" + ansDen;
	}

}
