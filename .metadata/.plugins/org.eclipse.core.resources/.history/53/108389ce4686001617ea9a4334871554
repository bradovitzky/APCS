package src;
import java.util.*;
public class TemperatureStats
{

	public static void main(String[] args)
	{
		double sum = 0;
		double min = 10000;
		double max = 0;
		Scanner console = new Scanner(System.in);
		System.out.println("How many temperatures will you enter? ");
		int amountOfTemps = console.nextInt();
		System.out.println("Please select Fahrenheit or Celsius (F or C): ");
		String ForC = console.next();
		for (int i = 1; i <= amountOfTemps; i++)
		{
			System.out.println("Enter temperature # " + i + ":");
			double nextTemp = console.nextDouble();
			sum += nextTemp;
			if (nextTemp < min)
			{
				min = nextTemp;
			}
			if (nextTemp > max)
			{
				max = nextTemp;
			}
		}
		double average = sum / amountOfTemps;
		System.out.println("The highest temperature was: " + max);
		System.out.println("The lowest temperature was: " + min);
		System.out.println("The average temperature was: " + average);
		String YorN = "";
		
		if(ForC == "F")
		{
			System.out.println("All of these are in Fahrenheit.");
			System.out.println("Would you like to know these numbers in Celsius? (y or n): ");
			YorN = console.next();
		}
		else if(ForC == "C")
		{
			System.out.println("All of these are in Celsius.");
			System.out.println("Would you like to know these numbers in Fahrenheit? (y or n): ");
			YorN = console.next();
		}
		else
		{
			System.out.println("I would ask if you wanted this in Fahrenheit or Celsius, but you didn't select F or N!");
			System.out.println("Goodbye!");
		}
		
		if (YorN == "y")
		{
			
		}
		else
		{
			System.out.println("Goodbye!");
		}
	}

}
