package src;

public class Person
{
	private String name;
	private int age;
	
	public String getName()
	{
		return name;
	}
	
	public int getAge()
	{
		return age;
	}
	
	public void setName(String newName)
	{
		name = newName;
	}
	
	public void setAge(int newAge)
	{
		age = newAge;
	}
	
	public Person(String name, int age)
	{
		this.name = name;
		this.age = age;
	}
	public Person()
	{
		name = null;
		age = 0;
	}
	public String toString()
	{
		return name + " is " + age + " years old";
	}
}