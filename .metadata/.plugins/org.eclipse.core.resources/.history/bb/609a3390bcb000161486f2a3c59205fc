package DeckOfCards;

public class Card implements Comparable<Card>
{
	int value;
	String suit;

	public Card(int v, String s)
	{
		value = v;
		suit = s;
	}

	public String toString()
	{
		String[] faceCards = {"Ace", "Jack", "Queen", "King"};
		String first;
		
		if(value == 1)
		{
			first = faceCards[0];
		}
		else if(value == 11)
		{
			first = faceCards[1];
		}
		else if(value == 12)
		{
			first = faceCards[2];
		}
		else if(value == 13)
		{
			first = faceCards[3];
		}
		else
		{
			first = value + "";
		}
		return first + " of " + suit;
	}

	// for testing purposes
	public static void main(String[] args)
	{
		for (int i = 0; i < 10; i++)
		{
			Card c = new Card((int) (Math.random() * 13 + 1), "Clubs");
			System.out.println(c);
		}
	}
	public boolean betterThan(String otherSuit)
	{
		String[] suits = {"Clubs", "Diamonds", "Hearts", "Spades"};
		for (int i=0; i< suits.length; i++)
		{
			if (this.suit.equals(suits[i]))
			{
				// one sub-if for checking if they are the same suit
				if (this.suit.equals(otherSuit))
				{
					System.out.println("Same Suit!");
					return false;
				}
				// check if otherSuit comes before or after
				for (int n=0; n<suits.length; n++)
				{
					if(otherSuit.equals(suits[n]))
					{
						if (n>i)
						{
						return true;
						}
					else
					{
						return false;
					}
				}
				}
			}
			return false;
		}
		return false;
	}
	@Override
	public int compareTo(Card other)
	{
		// TODO Auto-generated method stub
		if (this.value > other.value)
		{
			return 1;
		}
		else if (this.value < other.value)
		{
			return -1;
		}
		else
		{
			if (this.betterThan(other.suit))
			{
				return 1;
			}
			else
			{
				if (this.suit.equals(other.suit))
				{
					return 0;
				}
				else
				{
					return -1;
				}
			}
		}
	}

}