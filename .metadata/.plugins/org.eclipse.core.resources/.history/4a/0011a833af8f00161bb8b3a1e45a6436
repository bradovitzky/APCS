package karel;

import kareltherobot.*;

public class Filler extends Robot
{

	public Filler(int street, int avenue, Direction dir, int beeps)
	{
		super(street, avenue, dir, beeps);
	}

	public void turnRight()
	{
		turnLeft();
		turnLeft();
		turnLeft();
	}

	public void putAndMove()
	{
		putBeeper();
		move();
	}

	public void findCorner()
	{
		while (!frontIsClear())
		{
			turnLeft();
			if (frontIsClear())
			{
				putAndMove();
				turnRight();
			}
			else
			{
				turnLeft();
			}
		}
	}

	public void jumpHurdle()
	{
		findCorner();
		putAndMove();
		turnRight();
		findCorner();
		putAndMove();
		turnRight();
		findCorner();
	}
	public void traverseFirstStreet()
	{
		while(!nextToABeeper())
		{
			if(frontIsClear())
				{
					putAndMove();
				}
			else
			{
				jumpHurdle();
			}
		}
		turnLeft();
		move();
		turnLeft();
	}
	public void fillEndSpace()
	{
		int width = 0;
		while(!nextToABeeper())
		{
			width++;
			putAndMove();
		}
		turnRight();
		move();
		turnRight();
		move();
		for(int i; i<width; i++)
		{
			putAndMove();
		}
		
	}
	public static void main(String[] args)
	{
		MakeHurdles temp = new MakeHurdles();
		World.readWorld("hurdlesx.kwld");
		World.setVisible(true);

		Filler Frank = new Filler(1, 1, East, infinity);
		World.setDelay(1);

		Frank.traverseFirstStreet();
		Frank.fillEndSpace();
	}
}
