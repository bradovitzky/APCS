package activity2;

import java.util.ArrayList;

import DeckOfCards.Card;

/**
 * The Deck class represents a shuffled deck of cards.
 * It provides several operations including
 *      initialize, shuffle, deal, and check if empty.
 */
public class Deck 
{
	private ArrayList<Card> cards;
	public static final int CARDS_IN_DECK = 52;
	public static final int CARDS_IN_SUIT = 13;

	private int undealt;
	/**
	 * Creates a new Deck instance.

	 * It pairs each element of ranks with each element of suits,
	 * and produces one of the corresponding card.
	 * @param ranks is an array containing all of the card ranks.
	 * @param suits is an array containing all of the card suits.
	 * @param values is an array containing all of the card point values.
	 */
	public Deck(ArrayList<String> ranks, ArrayList<String> suits, ArrayList<Integer> values) 
	{
		undealt = 0;
		for(int i=0; i<ranks.size(); i++)
		{
			for(int j=0; j<suits.size(); j++)
			{
				Card e = new Card(ranks.get(i), suits.get(i), values.get(i));
				cards.add(e);
				undealt++;
			}
		}
	}

	/**
	 * Determines if this deck is empty (no undealt cards).
	 * @return true if this deck is empty, false otherwise.
	 */
	public boolean isEmpty() 
	{
		if(cards.size() == 0)
		{
			return true;
		}
		else
			return false;
	}

	/**
	 * Accesses the number of undealt cards in this deck.
	 * @return the number of undealt cards in this deck.
	 */
	public int getCardsLeft() 
	{
		return undealt;
	}

	/**
	 * Randomly permute the given collection of cards
	 * and reset the size to represent the entire deck.
	 */
	public void shuffle() 
	{
		int randNum;
		for(int i=0; i<52; i++)
		{
			randNum = (int)(Math.random()*52);
			Card holder = cards.get(i);
			cards.set(i, cards.get(randNum));
			cards.set(randNum, holder);
		}
	}

	/**
	 * Deals a card from this deck.
	 * @return the card just dealt, or null if all the cards have been
	 *         previously dealt.
	 */
	public Card deal() 
	{
		Card topCard = cards.get(0);
		cards.remove(0);
		undealt--;
		return topCard;
	}
}