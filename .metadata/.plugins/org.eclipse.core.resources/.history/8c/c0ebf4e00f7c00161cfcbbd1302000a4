package karel;

import kareltherobot.*;

public class FencePlanter extends Robot
{
	public FencePlanter(int street, int avenue, Direction dir, int beeps)
    {
        super(street, avenue, dir, beeps);
    }
	
	public static void main(String [] args)
    {
        World.readWorld("WorldFiles/fig3-1.kwld");
        World.setVisible(true);

        FencePlanter Felix = new FencePlanter(1, 1, East, 0);
        World.setDelay(3);
        
        Felix.getBeepers();
        Felix.findBox();
        Felix.putBeeper();
        
        for (int i=0;i<4;i++)
        {
            Felix.plantEdge();
            Felix.plantCorner();
        }
        
    }

	private void plantEdge()
	{
		
	}

	private void findBox() 
	{
		move();
		turnRight();
		while (frontIsClear())
		{
			move();
		}
	}

	private void turnRight()
	{
		turnLeft();
		turnLeft();
		turnLeft();
	}

	private void getBeepers()
	{
		while (!nextToABeeper())
		{
			move();
		}
		while (nextToABeeper())
		{
			pickBeeper();
		}
	}
}
