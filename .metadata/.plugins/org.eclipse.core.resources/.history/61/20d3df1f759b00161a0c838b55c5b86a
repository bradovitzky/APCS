package src;

import java.util.*;

public class RowOfBoxes
{
	public static void printEquals(int size)
	{
		for(int i=0; i<size; i++)
		{
			System.out.print("=");
		}
		System.out.print("O");
	}
	public static void printEqualsRow(int size, int boxes)
	{
		System.out.print("O");
		for(int i = 0; i<boxes; i++)
		{
			printEquals(size);
		}
	}
	public static void printPipes(int size)
	{
		for(int i=0; i<size; i++)
		{
			System.out.print(" ");
		}
		System.out.print("|");
	}
	public static void printPipeRow(int size, int boxes)
	{
		System.out.print("|");
		for(int i=0; i<boxes; i++)
		{
			printPipes(size);
		}
	}
	public static void printBoxes(int size, int boxes)
	{
		printEqualsRow(size, boxes);
		System.out.println();
		printPipeRow(size, boxes);
		System.out.println();
		printEqualsRow(size, boxes);
		System.out.println();
	}
	public static void main(String[] args)
	{
		Scanner console = new Scanner(System.in);
		System.out.print("How many boxes? ");
		int boxes = console.nextInt();
		while(boxes!=0)
		{
			System.out.print("What size? ");
			int size = console.nextInt();
			printBoxes(size, boxes);
			System.out.println();
			System.out.print("How many boxes? ");
			boxes = console.nextInt();
		}
		System.out.println("All done!");
			
	}

}
