package fracCalc2;
import java.util.*;
public class FractionalCalculator
{

	public static void main(String[] args)
	{
		Scanner console = new Scanner(System.in);
		System.out.println("Welcome to the Fraction Calculator!");
		System.out.println("Enter an expression (or \"quit\"): ");
		String input = console.nextLine();
		while(!input.equals("quit"))
		{
			convertToFraction(input);
			System.out.println("Left operand: 1_1/2");
			System.out.println("Operator: +");
			System.out.println("Right operand: 3/4");
			System.out.println();
			System.out.println("Enter an expression (or \"quit\"): ");
			input = console.nextLine();
		}
		System.out.println("Goodbye!");
	}

	public static String removeSpaces(String input)
	{
		String output;
		for(int i=0; i<input.length(); i++)
		{
			if (input.charAt(i) == ' ')
			{
				output = input.substring(0, i) + input.substring(i+1);
			}
		}
		return output;
	}
	public static String convertToFraction(String input)
	{
		int underscoreIndex = input.indexOf("_");
		int slashIndex = input.indexOf("/");
		int spaceIndex = input.indexOf(" ");
		int number = 0;
		int numerator;
		int denominator;
		if(underscoreIndex != -1)
		{
			number = Integer.parseInt(input.substring(0, underscoreIndex));
			numerator = Integer.parseInt(input.substring(underscoreIndex, slashIndex));
		}
		else
		{
			numerator = Integer.parseInt(input.substring(0, slashIndex));
		}
		denominator = Integer.parseInt(input.substring(slashIndex));
		return null;
	}

}
